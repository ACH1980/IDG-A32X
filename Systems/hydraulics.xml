				</or>
			</condition>
            <expression>
                <sum>
                    <property>/controls/flight/rudder</property>
                    <property>/controls/flight/rudder-trim</property> 
				</sum>
            </expression>
		</input>
		<output>/controls/flight/rudder-fdm</output>
		<min>-1.0</min>
		<max>1.0</max>
	</filter>

